<h1>Welcome, <%= @user.username %>!</h1>

<%= flash[:message] if flash[:message] %>

<h3>Your Posts: </h3>
<% if @user.authored_posts.any? %>
    <%= link_to "New Post", new_post_path %>
    <% @user.authored_posts do |post| %>
        <%= link_to post.title, post_path(post) %>
    <% end %>
<% else %>
    <p>Gadzooks! You haven't made any posts! <%= link_to "Click here", new_post_path %> to get started!</p>
<% end %>

