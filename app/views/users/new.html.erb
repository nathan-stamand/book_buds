<h1>Become a BookBud!</h1>

<%= form_for @user do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %><br><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br><br>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br><br><br>

    <%= f.submit "Sign Up" %>

<% end %>